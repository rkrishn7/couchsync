{
  "name": "couchsync",
  "version": "0.0.2",
  "description": "Syncs your favorite streaming platforms across devices",
  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "https://*/"
  ],
  "background": {
    "scripts": ["static/js/background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "run_at": "document_end",
      "css": ["/static/css/contentScript.css"],
      "js": ["/static/js/contentScript.js"]
    }
  ],
  "icons": {
    "16": "couchsync-16.png",
    "48": "couchsync-48.png",
    "128": "couchsync-128.png"
  },
  "manifest_version": 2
}
