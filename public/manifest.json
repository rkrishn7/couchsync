{
  "name": "Playback Sync",
  "version": "0.0.1",
  "description": "Syncs your favorite streaming platforms across devices",
  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "declarativeContent",
    "storage",
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/watch*"],
      "css": ["/static/css/content.css"],
      "js": ["/static/js/0.chunk.js", "/static/js/1.chunk.js", "static/js/content.js"]
    }
  ],
  "icons": {
    "16": "icon_16.png",
    "48": "icon_48.png",
    "128": "icon_128.png"
  },
  "manifest_version": 2
}
